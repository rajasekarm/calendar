{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "sourceMap": true,
      "outDir": "dist",
      "strict": true,
      "allowJs": false,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "removeComments": true,
      "noImplicitAny": true,
      "baseUrl": ".",
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"],
  }